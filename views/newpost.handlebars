<section>
    <a href="/dashboard" class="is-pulled-right"> &larr; back to dashboard</a>
  <h2 class="title">create new blog post</h2><hr>

  <form class="new-post-form" action="/api/posts/new" method="post">
    <div>
      <label for="post-title">title:</label>
      <input class="input" type="text" id="post-title" name="title" placeholder="insert blog title here" value="" />
    </div>
    <div>
      <label for="post-content">content:</label>
      <input class="textarea is-large" id="post-content" name="content" placeholder="insert blog content here" value="" />
    </div>
    <button type="submit" class="button is-dark is-pulled-right">create post</button>
  </form>
</section>

<script src="/javascript/add-post.js"></script>